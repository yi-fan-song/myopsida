# Myopsida Configuration
# This file should be sourced before running myopsida

# Cloudflare API token (required)
CF_API_TOKEN="your_cloudflare_api_token_here"

# Cloudflare Zone ID (required)
CF_ZONE_ID="your_zone_id_here"

# Cloudflare DNS Record ID for A record (IPv4) (required)
CF_RECORD_ID_V4="your_record_id_v4_here"

# Cloudflare DNS Record ID for AAAA record (IPv6) (required)
CF_RECORD_ID_V6="your_record_id_v6_here"

# DNS record name (required)
CF_RECORD_NAME="example.com"

# TTL in seconds (optional, default: 3600)
CF_TTL="3600"

# Whether to proxy through Cloudflare (optional, default: true)
CF_PROXIED="true"

# Comment for DNS records (optional)
CF_COMMENT="Automatically updated via systemd timer"
